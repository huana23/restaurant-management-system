# LARAVEL (be/)
# -------------------------

# Laravel compiled files & cache
be/bootstrap/cache/
be/storage/*.key
be/storage/app/public/*
be/storage/debugbar/
be/storage/framework/cache/*
be/storage/framework/sessions/*
be/storage/framework/views/*
be/storage/logs/*

# Laravel test coverage
be/coverage/
be/.phpunit.result.cache

# Laravel vendor
be/vendor/

# Composer lock file (optional)
be/composer.lock

